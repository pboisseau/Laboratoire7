#include <iostream>
#include <sstream>
#include <string>
#include <chrono>
#include <thread>
using namespace std;

int main()
{
	bool fin = true;
	const int MAXTABLEAU = 100;
	string maTable[MAXTABLEAU];
	int counter = 0;
	int counter1 = 1;

	while(fin)
	{
		cout << "Entrer votre nom" << endl;

		string nom;
		char buffer[256];
		cin.getline(buffer,256);
		nom = buffer;

		cout << "Entrer votre prenom" << endl;

		string prenom;
		cin.getline(buffer,256);
		prenom = buffer;

		string concat;

		concat.append(prenom.substr(0,1));
		concat.append(nom.substr(0,1));
		concat.append(to_string(counter1));
		maTable[counter] = concat;

		counter += 1;

		string question = "";
		cout << "Voulez-vous terminer le prog? (y ou n)" << endl;
		cin >> question;

		if(question == "y") fin = false;
		cin.ignore();

	}

	cout << maTable[0] << endl;

	for(int i = 0; i < MAXTABLEAU; i++)
	{
		cout << maTable[i] << endl;
	}

	sleep_for(10ns);

	return 0;
}
