#include <iostream>
#include <sstream>
#include <string>
using namespace std;

int main()
{
	cout << "Entrer votre nom" << endl;

	string nom;
	char buffer[256];

	cout << buffer << endl;

	cin.getline(buffer,256);
	nom = buffer;

	cout << nom << endl;

	return 0;
}
